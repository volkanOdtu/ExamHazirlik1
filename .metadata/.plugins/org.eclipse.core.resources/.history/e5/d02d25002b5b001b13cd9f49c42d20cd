		 int[] a = { 3,  2,  3, 2, 3} ;
				//int[] b = { 7 , 4, -2, 4,-2,-9}     -> 4
				//int[] c = { 7 ,-5, -5,-5, 7,-1, 7}  -> 3
				//int[] d = { 4 }  -> 1
		solution3(a);
		int[] b = { 7 , 4, -2, 4,-2,-9};
		solution3(b);
		int[] c = { 7 ,-5, -5,-5, 7,-1, 7};
